{
  "builders": [
    {
      "boot_command": [
        "<wait><enter><wait25s>",
        "<wait>1<enter>",
        "<wait><enter>",
        "<wait>1<enter>",
        "<wait>root<enter>",
        "<wait>fdisk /dev/sda<enter>",

        "<wait>g<enter>n<enter>1<enter><enter>+30G<enter>",
        "n<enter>2<enter><enter>+5G<enter>t<enter>2<enter>19<enter>",
        "n<enter>3<enter><enter>+10G<enter>",
        "n<enter>4<enter><enter>+25G<enter>",
        "n<enter>5<enter><enter><enter>w<enter>",

        "<wait>setup<enter><wait2s>"

        "a<enter><enter><enter><wait4s><enter>",
        "<enter><enter><enter><wait3s>",
        "<down><enter><enter><enter><wait3s>/tmp<enter>",
        "<down><down><enter><enter><enter><wait3s>/home<enter>",
        "<down><down><down><enter><enter><wait3s>/opt<enter><enter>",


        "<wait>1<enter>a<enter><wait3>",
        "<wait>f<spacebar>kk<spacebar><enter>",
        "<wait>f<enter>",
        "<wait20m>",
        "<wait>s<enter>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait5s>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait>slackware<enter>",
        "<wait>example.org<enter>",
        "<wait>n<enter>",
        "<wait><enter>",
        "<wait><down><down><down><down><down><down><down><down><down><down><down><down><down><down><spacebar>",
        "<wait><down><down><down><down><spacebar>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait>n<enter>",
        "<wait><down><down><down><down><down><enter>",
        "<wait>v<enter>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait>vagrant<enter>",
        "<wait>vagrant<enter>",
        "<wait><enter>",
        "<wait><enter>",
        "<wait>e<wait><enter><wait><enter>",
        "<wait><enter>",
        "<wait10s><enter>",
        "<wait10><wait10><wait10>",
        "root<enter>",
        "<wait>vagrant<enter>",
        "echo PermitRootLogin yes >> /etc/ssh/sshd_config<enter>",
        "/etc/rc.d/rc.sshd restart<enter>"
      ],
      "export_opts": [
        "--manifest",
        "--vsys",
        "0",
        "--description",
        "Slackware64 current",
        "--version",
        "0.1.0"
      ],
      "disk_size": 80000,
      "guest_additions_interface": "sata",
      "guest_os_type": "Linux26_64",
      "hard_drive_interface": "sata",
      "iso_interface": "sata",
      "iso_url": "iso/slackware64-current-install-dvd.iso",
      "iso_checksum": "file:iso/MD5SUM",
      "shutdown_command": "shutdown -h now",
      "skip_export": false,
      "ssh_password": "vagrant",
      "ssh_pty": true,
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "usb": true,
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          2000
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          2
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          128
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpuhotplug",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hwvirtex",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate3d",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--graphicscontroller",
          "vmsvga"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic1",
          "nat"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard-mode",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "coreaudio"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audiocontroller",
          "ac97"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audioout",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbohci",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbehci",
          "off"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbxhci",
          "off"
        ]

      ],
      "vm_name": "slackware-current-vbox-CLIENT"
    }
  ],
  "description": "A slackware 64-bit current installation with Virtualbox tools installed",
  "post-processors": [
    "vagrant"
  ],
  "provisioners": [
    {
      "script": "provision_box.sh",
      "type": "shell",
      "valid_exit_codes":[0,2]
    },
    {
      "script": "vbox_guest_additions.sh",
      "type": "shell",
      "valid_exit_codes":[0,2]
    },
  ]
}

