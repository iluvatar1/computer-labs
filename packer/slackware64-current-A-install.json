{
  "builders": [
    {
      "type": "virtualbox-vm",
      "disable_shutdown": true,
      "shutdown_command": "",
      "shutdown_timeout": "1h",
      "vm_name": "base_slack_machine",
      "target_snapshot": "After slackware package install",
      "keep_registered": "true",
      "skip_export": "true",
      "format": "ovf",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": "",
      "force_delete_snapshot": true,
      "communicator": "none",
      "boot_command": [
        "<wait><enter><wait20s>",
        "<wait>1<enter>",
        "<wait><enter>",
        "<wait>1<enter>",
        "<wait>root<enter>",
        "<wait>fdisk /dev/sda<enter><wait>",

        "<wait>g<enter>n<enter>1<enter><enter>+30G<enter>",
        "n<enter>2<enter><enter>+5G<enter>t<enter>2<enter>19<enter>",
        "n<enter>3<enter><enter>+10G<enter>",
        "n<enter>4<enter><enter>+25G<enter>",
        "n<enter>5<enter><enter><enter>w<enter>",

        "<wait>setup<enter><wait3s>",

        "a<enter><wait><enter><wait><enter><wait4s><enter><wait2s>",
        "<enter><wait><enter><wait><enter><wait3s>",
        "<down><wait><enter><wait><enter><wait><enter><wait3s>/tmp<enter><wait3s>",
        "<down><down><wait><enter><wait><enter><wait><enter><wait3s>/home<enter><wait>",
        "<down><down><down><wait><enter><wait><enter><wait><enter><wait3s>/opt<enter><wait><enter><wait>",

        "<wait>1<enter>a<enter><wait3>",
        "<wait>f<spacebar>kk<spacebar><enter>",
        "<wait>f<enter>",
        "<wait25m>"
      ],
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          2000
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          2
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          128
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpuhotplug",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hwvirtex",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--accelerate3d",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--rtcuseutc",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--graphicscontroller",
          "vmsvga"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic1",
          "nat"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--clipboard-mode",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--draganddrop",
          "bidirectional"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audio",
          "coreaudio"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audiocontroller",
          "ac97"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--audioout",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbohci",
          "on"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbehci",
          "off"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--usbxhci",
          "off"
        ]
      ]
    }
  ]
}
